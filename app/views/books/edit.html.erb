<%= form_with model: @book do |f| %>
<form>
  <h1>Editing Book</h1>

    <div class = "filed">
      <label for="book_title">Title</label>
      <%= f.text_field :title %>
    </div>
    
    <div class = "filed">
      <label for="book_body">Body</label>
      <%= f.text_area :body %>
    </div>
    <div class="actions">
    <%= f.submit'Update Book'%>
    </div>
</form>

<%= link_to "Show",book_path %> | <%= link_to "Back",books_path %>

<% end %>
