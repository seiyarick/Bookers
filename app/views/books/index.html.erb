<% flash[:notice] %>
<h1>Books</h1>
  <table>
      <thead>
        <tr>
          <th>Title</th>
          <th>body</th>
          <th colspan="3"></th>
        </tr>
      </thead>
<% @books.each do |book| %> <!--#@booksが|book|に入っておりendまでbook=|book|になる-->
    <tbody>
      <tr> <!--trは横一列-->
        <td><%= book.title %></td> <!--tdはひとマス-->
        <td><%= book.body %></td>
        <td><%= link_to "show",book_path(book.id) %></td>
        <td><%= link_to "Edit",edit_book_path(book.id) %></td>
        <td><%= link_to "destroy",book_path(book.id),method: :delete, "data-confirm" =>"Are you sure?" %></td>
      </tr>
    </tbody>
  <% end %>
  </table>
<h2>New Book</h2>
<%= form_with model: @book,local:true, method: :post do |f| %>

<div class="filed">Title</div>
<%= f.text_field :title %>

<div class="filed">Body</div>
<%= f.text_area :body %>

<div class="actions">
<%= f.submit 'Create Book'%>

</div>

<% end %>
