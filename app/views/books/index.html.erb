

<h1>Books</h1>
  <table>
      <thead>
        <tr>
          <th>Title</th>
          <th>body</th>
          <th colspan="3"></th>
        </tr>
      </thead>
<% @books.each do |book| %> <!--#@booksが|book|に入っておりendまでbook=|book|になる-->
    <tbody>
      <tr> <!--trは横一列-->
        <td><%= book.title %></td> <!--tdはひとマス-->
        <td><%= book.body %></td>
        <td><%= link_to "show",book_path(book.id) %></td>
        <td><%= link_to "Edit",edit_book_path(book.id) %></td>
        <td><%= link_to "destroy",book_path(book.id),method: :delete, "data-confirm" =>"Are you sure?" %></td>
      </tr>
    </tbody>
  <% end %>
  </table>
<h2>New Book</h2>
<% if @book.errors.any? %>
<div id="error_explanation">
  <h2 class="error_mess"><%= @book.errors.count %> errors prohibited this book from being saved:</h2>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <%end %>
  </ul>
<%end %>
</div>

<%= form_with model: @book, local:true , method: :post do |f| %>

<div class="filed">Title</div>
<%= f.text_field :title %>

<div class="filed">Body</div>
<%= f.text_area :body %>

<div class="actions">
<%= f.submit 'Create Book'%>

</div>

<% end %>
